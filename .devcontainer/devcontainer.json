{
    "name": "${localWorkspaceFolderBasename}",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "4"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "containerEnv": {
        "MECABRC": "/usr/local/etc/.mecabrc",
        "R_HISTSIZE": "200"
    },
    "remoteEnv": {
        "WAKATIME_API_KEY": "${localEnv:WAKATIME_API_KEY}"
    },
    "forwardPorts": [8787],
    "portsAttributes": {
		"8787": {
			"label": "Rstudio",
			"requireLocalPort": true,
			"onAutoForward": "ignore"
		}
    },
    "postAttachCommand": {
        "rstudio": "sudo rstudio-server start",
        "mecabrc": "cp ${MECABRC} ~"
    }
}
